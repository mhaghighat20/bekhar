@using Bekhar.Models
@model Bekhar.Models.Kala

@{
    Page.Title = "نمایش کالا";
}

<div class="container pt-3 mb-5">
    <div class="row ">
        <div class="col-6">
            <h2>@Model.Name</h2>
            <p>تاریخ: @Model.CreationTime.GetPersianStr()</p>
        
            <table class="table">


                <tr>
                    <th>دسته بندی</th>
                    <th> @Model.Category</th>
                </tr>

                <tr>
                    <td>محل</td>
                    <td>@Model.City - @Model.Location</td>
                </tr>
                <tr>
                    <td>نوع آگهی</td>
                    <td>فروشی</td>
                </tr>
                <tr>
                    <td>قیمت</td>
                    <td>@Model.Price <span class="font-weight-bold">تومان</span></td>
                </tr>
                <tr>
                    <td>موبایل</td>
                    <td> @Model.Mobile </td>
                </tr>

                <tr>
                    <td>ایمیل</td>
                    <td> @Model.Email</td>
                </tr>

            </table>
            <p>توضیحات: 
                @Model.Description
            </p>
            <a href="/Kharids/Create?KalaId=@(Model.Id)">خرید</a>
        </div>
        <div class="col-6 ">
            <img src="https://via.placeholder.com/450" class="rounded" style="width:inherit;">
            <p class="text-center pt-2 grey-text">غوره هیچگونه مسوولیتی ندارد</p>
        </div>
    </div>
</div>
