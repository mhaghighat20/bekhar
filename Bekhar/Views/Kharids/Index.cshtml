@model IEnumerable<Bekhar.Models.Kharid>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KalaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KharidarUsername)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ForoshandeUsername)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KalaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KharidarUsername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForoshandeUsername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataType)
            </td>
            <td>
                @if (item.canBeApproved)
                {
                    @Html.ActionLink("تایید خرید", "Edit", new { id = item.Id })
                }

            </td>
        </tr>
    }

</table>
