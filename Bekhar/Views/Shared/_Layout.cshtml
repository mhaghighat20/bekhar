@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>غوره :: @Page.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.rtlcss.com/bootstrap/v4.0.0/css/bootstrap.min.css" integrity="sha384-P4uhUIGk/q1gaD/NdgkBIl3a6QywJjlsFJFk7SPRdruoGddvRVSwv5qFnvZ73cpz" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous" />
    @{var style = "~/Content/css/mdb.min.css";}
    <link rel="stylesheet" type="text/css" href="@Href(style)" />
    @{style = "~/Content/css/style.css";}
    <link rel="stylesheet" type="text/css" href="@Href(style)" />
    @if (Page.CustomCSS != null)
    {
        <link rel="stylesheet" type="text/css" href="@Href(Page.CustomCSS)" />
    }

</head>
<body class="yekan">

    <header>
        <nav class="navbar fixed-top deep-orange lighten-1">
            <a class="navbar-brand white-text yekan" href="~/">
                <i class="fas fa-frog" style="font-size: 2rem;">
                    <span class="brand yekan" style="margin-right: 1rem; vertical-align: top;">غوره</span>
                </i>
            </a>

            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link bk-nav-link" href="#">درباره ما </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link bk-nav-link" href="#">تماس با ما</a>
                </li>
            </ul>

            @if (!Request.IsAuthenticated)
            {
                <a class="nav-link bk-nav-link ml-auto" href="~/Account/Register">ثبت نام</a>
                <a class="btn btn-outline-white white-text yekan px-3" href="~/Account/Login">
                    <span style="vertical-align: top; font-weight: bold; font-size: 1rem;"> ورود </span>
                    <i class="fa fa-user" style="font-size: 1.5rem; vertical-align: middle;"></i>
                </a>
            }
            else
            {
                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "ml-auto" }))
                {
                    @Html.AntiForgeryToken()
                }

                    <div class="dropdown show white-text">
                        <a class="btn btn-outline-white dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-user mr-3" style="font-size:1.2rem;"></i>
                            @User.Identity.Name
                        </a>

                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                            <li class="dropdown-header">امور مالی</li>
                            <li class="dropdown-item"><a href="/Transaction">لیست تراکنش ها</a></li>
                            <li class="dropdown-item"><a href="/Kharids">خریدهای من</a></li>
                            <li class="dropdown-divider"></li>
                            <li class="dropdown-header">آگهی ها</li>
                            <li class="dropdown-item"><a href="/Kala">آگهی های من</a></li>
                            <li class="dropdown-item"><a href="/">تمامی آگهی ها</a></li>
                            <li class="dropdown-divider"></li>
                            <li class="dropdown-header">حساب کاربری</li>
                            <li class="dropdown-item" ><a href="/Manage">پروفایل</a></li>
                            <li class="dropdown-item"><a href="javascript:document.getElementById('logoutForm').submit()">خروج</a></li>
                        </ul>
                    </div>

                <a class="btn btn-outline-white white-text yekan px-3 ml-3" href="~/Kala/Create">
                    <span style="vertical-align: top; font-weight: bold; font-size: 1rem;"> آگهی جدید </span>
                    <i class="fa fa-plus" style="font-size: 1.5rem; vertical-align: middle;"></i>
                </a>
            }
        </nav>
    </header>
    
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>

    @*<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.rtlcss.com/bootstrap/v4.0.0/js/bootstrap.min.js" integrity="sha384-54+cucJ4QbVb99v8dcttx/0JRx4FHMmhOWi4W+xrXpKcsKQodCBwAvu3xxkZAwsH" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.7.0/js/mdb.min.js" integrity="sha256-RyKFOSKnuKFSYAyJlfeHdb8ljBAbLJOSh9Bz8pzhhkY=" crossorigin="anonymous"></script>
    
    
    @RenderBody()

